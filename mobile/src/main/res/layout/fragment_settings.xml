<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_generalset"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="general_settings">

    <RelativeLayout
        android:id="@+id/display_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/display_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dispinfo_marginleft"
            android:layout_marginTop="@dimen/dispinfo_margintop"
            android:text="@string/displayinfo_title"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dispinfo_txtsize" />

        <View
            android:id="@+id/display_info_ruler"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/display_info_title"
            android:layout_marginTop="@dimen/dispinfo_ruler_margintop"
            android:background="@color/set_ruler_color" />

        <LinearLayout
            android:id="@+id/set_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_info_ruler"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/settings_padding"
            android:paddingLeft="@dimen/settings_paddingleft"
            android:paddingStart="@dimen/settings_paddingleft"
            android:paddingTop="@dimen/settings_padding">

            <TextView
                android:id="@+id/username_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_title"
                android:textColor="@color/textPrimaryLight"
                android:textSize="@dimen/gen_title_txtsize" />

            <TextView
                android:id="@+id/set_username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/subtitle_marginleft"
                android:layout_marginStart="@dimen/subtitle_marginleft"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/gen_text_txtsize" />

        </LinearLayout>

        <View
            android:id="@+id/name_ruler"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/set_username"
            android:background="@color/set_ruler_color" />

        <LinearLayout
            android:id="@+id/set_usersurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_ruler"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/settings_padding"
            android:paddingLeft="@dimen/settings_paddingleft"
            android:paddingStart="@dimen/settings_paddingleft"
            android:paddingTop="@dimen/settings_padding">

            <TextView
                android:id="@+id/usersurname_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usersurname_title"
                android:textColor="@color/textPrimaryLight"
                android:textSize="@dimen/gen_title_txtsize" />

            <TextView
                android:id="@+id/set_usersurname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/subtitle_marginleft"
                android:layout_marginStart="@dimen/subtitle_marginleft"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/gen_text_txtsize" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/set_usersurname"
            android:background="@color/set_ruler_color" />

    </RelativeLayout>
</RelativeLayout>